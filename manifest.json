{
    "manifest_version": 3,
    "name": "Bookmark Search",
    "version": "1.0",
    "description": "Quickly search and open your Chrome bookmarks in a clean, grouped interface.",
    "permissions": ["bookmarks"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "128": "icon.png"
        },
        "default_title": "Search Bookmarks"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "author": "Insuck Cha",
    "homepage_url": "https://insuckcha.github.io/bookmark-search-extension/",
    "short_name": "BookmarkSearch"
}
